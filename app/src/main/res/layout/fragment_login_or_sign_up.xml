<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.techease.cpasolutions.Fragments.LoginOrSignUpFragment">


    <ImageView
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome To"
                android:textColor="#fff"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="CPA SOLUTIONS, INC. ORLANDO CPA\nFIRM LICENSED IN FLORIDA."
                android:textColor="#fff"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnLoginChoose"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/btn_light"
                android:text="Login"
                android:textAllCaps="false"
                android:layout_marginTop="50sp"
                android:textSize="17sp"
                android:textColor="#fff"/>
            <Button
                android:id="@+id/btnSignUpChoose"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/rounded_btn"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:layout_marginTop="20sp"
                android:textSize="17sp"
                android:textColor="#fff"/>
        </LinearLayout>

</RelativeLayout>
