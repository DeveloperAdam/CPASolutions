<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.techease.cpasolutions.Fragments.OnlinePaymentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_dark"
        android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:background="@drawable/boundry">
            <TextView
                android:id="@+id/tvSendPaymentTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEND PAYMENT TO:"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/tvCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPA SOLUTIONS INC."
                android:textSize="17sp"
                android:textColor="#000"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"/>
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arbab road peshawar."
                android:textSize="17sp"
                android:textColor="#000"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"/>
            <TextView
                android:id="@+id/tvexampleEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="example@mail.com"
                android:textSize="17sp"
                android:textColor="#000"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"/>
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+92 - 878755."
                android:textSize="17sp"
                android:layout_marginBottom="10sp"
                android:textColor="#000"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMOUNT"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="25sp"
            android:textSize="17sp"
            />

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/boundry"
            android:layout_marginTop="5sp"
            android:hint="0"
            android:paddingLeft="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"/>
        <TextView
            android:id="@+id/tvNoteToMerchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOTE TO MERCHANT"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="25sp"
            android:textSize="17sp"
            />

        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/boundry"
            android:layout_marginTop="5sp"
            android:hint="Note here"
            android:maxLines="5"
            android:paddingLeft="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"/>

        <Button
            android:id="@+id/btnSendPayment"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@color/colorPrimaryDark"
            android:text="Send Payment"
            android:textAllCaps="false"
            android:layout_marginBottom="10sp"
            android:textColor="#fff"
            android:textSize="17sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="50sp"/>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
