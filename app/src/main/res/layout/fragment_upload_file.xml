<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.techease.cpasolutions.Fragments.UploadFileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/llChooseDocument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20sp"
            android:background="@drawable/boundry">
            <ImageView
                android:id="@+id/ivFileView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_new"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"/>
            <TextView
                android:id="@+id/tvChooseDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Document"
                android:textSize="17sp"
                android:layout_marginBottom="10sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"/>
        </LinearLayout>
            <TextView
                android:id="@+id/tvFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOLDER"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/boundry"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvChooseFolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Folder"
                    android:paddingLeft="20sp"
                    android:layout_gravity="center"
                    android:textSize="17sp"/>
                <Spinner
                    android:spinnerMode="dropdown"
                    android:id="@+id/spinnerCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvSentTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SENT TO"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/boundry"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select"
                    android:paddingLeft="20sp"
                    android:layout_gravity="center"
                    android:textSize="17sp"/>
                <Spinner
                    android:spinnerMode="dropdown"
                    android:id="@+id/spinnerSentTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOTE"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"/>

            <EditText
                android:id="@+id/etComment"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginTop="5sp"
                android:hint="Comment"
                android:gravity="top"
                android:padding="10sp"
                android:maxLines="10"
                android:background="@drawable/boundry"/>

            <Button
                android:id="@+id/btnUploadFile"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="20sp"
                android:text="Upload File"
                android:textAllCaps="false"
                android:layout_marginTop="20sp"
                android:textColor="#fff"
                android:textSize="17sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
